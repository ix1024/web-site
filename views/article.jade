extends layout
block content			
	include _header
	div.wrap		 
		div(class="article-wrap")
			div(class="article-title")=data.result[0].title
			div(class="article-info")
				span 作者：
				strong=data.result[0].author
				span 日期：
				strong=utils.getDateString(data.result[0].date)
				span   阅读：
				strong=strong=data.result[0].read+1
			div(class="article-content")!=data.result[0].body		 
	include _footer
	script(src="/plugins/shBrushJScript/shCore.js")
	script(src="/plugins/shBrushJScript/shBrushJScript.js")
block scripts
	link(rel="stylesheet", href="/plugins/shBrushJScript/shCore.css")
	link(rel="stylesheet", href="/plugins/shBrushJScript/shCoreDefault.css")
	
	script(src="/javascripts/src/article.js")